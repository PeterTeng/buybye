.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-10
    %h2 items
    %ol.breadcrumb
      %li= link_to "トップ", admin_items_path
      %li.active
        %strong 一覧
  .col-lg-2
.wrapper.wrapper-content.animated.fadeInRight
  .row
    .ibox.float-e-margins
      .ibox-title
        %h5 item
      .ibox-content
        %table.table.table-align-middle
          %thead
            %tr
              %th id
              %th 画像
              %th 名前
              %th 作成日時
          %tbody
            - @items.each do |item|
              %tr
                %td= item.id
                %td= image_tag "", height: "40px"
                %td= item.name
                %td= item.created_at.strftime("%c")
                %td
                  = link_to "詳細", item_path(item), class: "btn btn-default btn-sm"
                  = link_to "警告をする", warning_admin_item_path(item), method: :post, class: "btn btn-warning btn-sm"
                  = link_to "削除", admin_item_path(item), method: :delete, data: { confirm: 'Confirm?' }, class: "btn btn-danger btn-sm"
